{% extends "base.html" %}
{% load static %}
{% block content %}


<!-- <div id="content"> -->
<div class="container">

    <div class="col-md-12">
        <ul class="breadcrumb">
            <li><a href="#">Home</a>
            </li>
            <li><a href="#">Ladies</a>
            </li>
            <li><a href="#">Tops</a>
            </li>
            <li>White Blouse Armani</li>
        </ul>

    </div>
    <div class="col-md-3">
        {% include 'products/categories_nav.html' with obj=object_list  prospect_type=prospect_type category_type=category_type %}
        {% include 'products/brands.html' with obj=object_list prospect_type=prospect_type category_type=category_type %}
        {% include 'products/colors.html' with obj=object_list prospect_type=prospect_type category_type=category_type %}
        {% include 'products/sale_banner.html'  %}
    </div>



    <div class="col-md-9">

        <div class="row" id="productMain">
            <div class="col-sm-6">
                <div id="mainImage">
                    <img  src="{{ object.image1.url }}" alt="" class="img-responsive">
                </div>

                <div class="ribbon sale">
                    <div class="theribbon">SALE</div>
                    <div class="ribbon-background"></div>
                </div>
                <!-- /.ribbon -->

                <div class="ribbon new">
                    <div class="theribbon">NEW</div>
                    <div class="ribbon-background"></div>
                </div>
                <!-- /.ribbon -->

            </div>
            <div class="col-sm-6">
                <div class="box">
                    <h1 class="text-center">{{ object.title }}</h1>
                    <p class="goToDescription"><a href="#details" class="scroll-to">Scroll to product details, material & care and sizing</a>
                    </p>
                    <p class="price">{{ object.price}} </p>

                    <p class="text-center buttons">
                        <a href="basket.html" class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                        <a href="basket.html" class="btn btn-default"><i class="fa fa-heart"></i> Add to wishlist</a>
                    </p>


                </div>

                <div class="row" id="thumbs">
                    <div class="col-xs-4">
                        <a href="{{ object.image1.url }}" class="thumb">
                            <img src="{{ object.image2.url }}" alt="" class="img-responsive">
                        </a>
                    </div>
                    <div class="col-xs-4">
                        <a href="{{ object.image3.url }}" class="thumb">
                            <img src="{{ object.image4.url }}" alt="" class="img-responsive">
                        </a>
                    </div>
                    <div class="col-xs-4">
                        <a href="{{ object.image5.url }}" class="thumb">

                            <img src="{{ object.image6.url }}" alt="" class="img-responsive">
                        </a>
                    </div>
                </div>
            </div>

        </div>


        <div class="box" id="details">
            <p>
                <h4>Product details</h4>
                {% if object.brandID %}
                <h4>Brand Name</h4>
                {{ object.brandID }}
                {% endif %}
                {% if object.shortDesc %}
                {{ object.shortDesc|safe }}
                {% endif %}
                {% if object.materialAndCare %}
                <h4>Material & care</h4>
                {{ object.materialAndCare|safe }}
                {% endif %}
                <h4>Size & Fit</h4>
                Available in Sizes: {{ object.size|safe }}
                {% if object.fitting %}
                {{ object.fitting|safe }}
                {% endif %}
                {% if object.color %}
                <p><B>Color:</B> {{ object.color | title }} </p>
                {% endif %}

                {% if object.longDesc %}

                <blockquote>
                    {{object.longDesc|safe}}
                </blockquote>
                {% endif %}
                <hr>
                <div class="social">
                    <h4>Show it to your friends</h4>
                    <p>
                        <a href="#" class="external facebook" data-animate-hover="pulse"><i class="fa fa-facebook"></i></a>
                        <a href="#" class="external gplus" data-animate-hover="pulse"><i class="fa fa-google-plus"></i></a>
                        <a href="#" class="external twitter" data-animate-hover="pulse"><i class="fa fa-twitter"></i></a>
                        <a href="#" class="email" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
                    </p>
                </div>
        </div>

        <div class="row same-height-row">
            <div class="col-md-3 col-sm-6">
                <div class="box same-height">
                    <h3>You may also like these products</h3>
                </div>
            </div>

            <div class="col-md-3 col-sm-6">
                <div class="product same-height">
                    <div class="flip-container">
                        <div class="flipper">
                            <div class="front">
                                <a href="detail.html">
                                    <img src="img/product2.jpg" alt="" class="img-responsive">
                                </a>
                            </div>
                            <div class="back">
                                <a href="detail.html">
                                    <img src="img/product2_2.jpg" alt="" class="img-responsive">
                                </a>
                            </div>
                        </div>
                    </div>
                    <a href="detail.html" class="invisible">
                        <img src="img/product2.jpg" alt="" class="img-responsive">
                    </a>
                    <div class="text">
                        <h3>Fur coat</h3>
                        <p class="price">$143</p>
                    </div>
                </div>
                <!-- /.product -->
            </div>

