{% load currency %}
{% load static %}
<div class="row products">

<div class="col-md-4 col-sm-6">
  <div class="product">
      <div class="flip-container">
          <div class="flipper">
              <div class="front">
                  <a href="detail.html">
                      {% if obj.image1.url %}
                      <img style='height:350px;' src="{{ obj.image1.url }}" alt="" class="img-responsive">
                      {% endif %}
                  </a>
              </div>
              <div class="back">
                  <a href="detail.html">
                      {% if obj.image2.url %}
                      <img src="{{ obj.image2.url }}" alt="" class="img-responsive">
                      {% endif %}
                  </a>
              </div>
          </div>
      </div>
      <a href="detail.html" class="invisible">
          {% if obj.image3.url %}
          <img src="{{ obj.image3.url }}" alt="" class="img-responsive">
          {% endif %}
      </a>
      <div class="text">
          <h3><a href="detail.html">{{obj.title}}</a></h3>
          <p class="price">{{obj.price|currency}}</p>
          <p class="buttons">
              <a href="{{ obj.get_customer_detail_url }}" class="btn btn-default">View detail</a>
              <a href="basket.html" class="btn btn-primary"><i class="fa fa-shopping-cart"></i>Add to cart</a>
          </p>
      </div>
      <!-- /.text -->
  </div>
  <!-- /.product -->
</div>
</div>
<!-- /.products -->
